<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context="com.penryn.snippet.MainActivity">

    <Button
        android:id="@+id/set_default_assistant"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:text="Set as default device assistant"/>

    <Button
        android:id="@+id/trigger_service"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:text="Try trigger"/>


    <Button
        android:id="@+id/start_all_services"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:text="Start all services"/>

    <Button
        android:id="@+id/stop_all_services"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:text="Stop all services"/>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/start_snippet_service"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Start SnippetService"/>

        <Button
            android:id="@+id/snippet_service_running"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Is SnippetService running?"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/start_snippet_session_service"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Start SnippetSessionService"/>

        <Button
            android:id="@+id/snippet_session_service_running"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Is SnippetSessionService running?"/>

    </LinearLayout>

    <Button
        android:id="@+id/rebuild_index"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:text="Rebuild index"/>

</LinearLayout>
